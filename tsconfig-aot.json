{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "files": [
        "./src/angular6-toaster.module.ts",
        "./src/bodyOutputType.ts",
        "./src/toaster-config.ts",
        "./src/toaster-container/toaster-container.component.ts",
        "./src/toaster.service.ts",
        "./src/toaster-container/toaster-container.component.ngfactory"
    ],
    "exclude": [
        "node_modules",
        "bundles"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
